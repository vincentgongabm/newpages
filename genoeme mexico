17231559 has 4 options

SELECT * FROM `catalog_product_entity` where sku like '%6922612%';

SELECT * FROM `catalog_category_product` where category_id=5;
SELECT * FROM `catalog_category_product` where product_id=17621404;

SELECT * FROM `catalog_product_option` where product_id=17621404;

SELECT * FROM `catalog_product_option_type_value` where option_id=2988612;
SELECT * FROM `catalog_product_option_type_value` where option_id=2988613;
SELECT * FROM `catalog_product_option_type_value` where option_id=2988614;

select *

from 

(SELECT producttable.product_id, optiontable.option_id
FROM `catalog_category_product` AS producttable
JOIN `catalog_product_option` AS optiontable
on producttable.product_id = optiontable.product_id
WHERE producttable.category_id = 5) as productoptiontable

join `catalog_product_option_type_value` as optionvaluetable
on productoptiontable.option_id = optionvaluetable.option_id 
